<h1>Lists#index</h1>
<p>Find me in app/views/lists/index.html.erb</p>

<h1>投稿一覧</h1>

<% @list.each do |list| %>

  <p>タイトル</p>
  <span>
    <%= link_to list.title, "/lists/#{list.id}" %>
  </span>

  <p>画像</p>
  <% if list.image.attached? %>
    <%= image_tag list.image, size: "200x200" %>
  <% else %>
    <%= image_tag 'no_image', size: "200x200" %>
  <% end %>

<% end %>